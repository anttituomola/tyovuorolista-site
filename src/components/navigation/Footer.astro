---
import RegisterButton from '../common/RegisterButton.astro'
import { t, getLocalizedPath } from '../../utils/translations'

const { locale = 'fi' } = Astro.props
const currentYear = new Date().getFullYear()

const contactPath = getLocalizedPath('/yhteystiedot', locale as 'fi' | 'en' | 'sv')
const pricingPath = getLocalizedPath('/hinnoittelu', locale as 'fi' | 'en' | 'sv')
const termsPath = getLocalizedPath('/kayttoehdot', locale as 'fi' | 'en' | 'sv')
const restaurantsPath = getLocalizedPath('/ravintolat-ja-kahvilat', locale as 'fi' | 'en' | 'sv')
const taxiPath = getLocalizedPath('/taksiyritykset-ja-kuljetus', locale as 'fi' | 'en' | 'sv')
const cleaningPath = getLocalizedPath('/siivous-ja-kiinteistopalvelut', locale as 'fi' | 'en' | 'sv')
const hotelsPath = getLocalizedPath('/hotellit-ja-majatalot', locale as 'fi' | 'en' | 'sv')
const eventsPath = getLocalizedPath('/tapahtumat-ja-sesonkityo', locale as 'fi' | 'en' | 'sv')
---

<div class='footer'>
    <RegisterButton locale={locale} />
    <h3>{t('footer.copyright', locale as 'fi' | 'en' | 'sv')} | {currentYear}</h3>
    <div class='footerLinks'>
        <p><a href={contactPath}>{t('footer.links.contact', locale as 'fi' | 'en' | 'sv')}</a></p>
        <p><a href={pricingPath}>{t('footer.links.pricing', locale as 'fi' | 'en' | 'sv')}</a></p>
        <p><a href={termsPath}>{t('footer.links.terms', locale as 'fi' | 'en' | 'sv')}</a></p>
    </div>
    <div class='industryLinks'>
        <h4>{t('footer.industrySolutions', locale as 'fi' | 'en' | 'sv')}</h4>
        <div class='industryLinksGrid'>
            <p><a href={restaurantsPath}>{t('footer.industries.restaurants', locale as 'fi' | 'en' | 'sv')}</a></p>
            <p><a href={taxiPath}>{t('footer.industries.taxi', locale as 'fi' | 'en' | 'sv')}</a></p>
            <p><a href={cleaningPath}>{t('footer.industries.cleaning', locale as 'fi' | 'en' | 'sv')}</a></p>
            <p><a href={hotelsPath}>{t('footer.industries.hotels', locale as 'fi' | 'en' | 'sv')}</a></p>
            <p><a href={eventsPath}>{t('footer.industries.events', locale as 'fi' | 'en' | 'sv')}</a></p>
        </div>
    </div>
</div>

<style>
    .footer {
        width: 100%;
        box-sizing: border-box;
        position: relative;
        bottom: 0;
        left: 0;
        text-align: center;
        background-color: var(--vaaleanharmaa);
        margin-top: 5rem;
        padding-top: 1rem;
    }
    h3 {
        padding: 2rem;
    }
    .footerLinks {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 2rem;
    }
    .footerLinks a {
        cursor: pointer;
        text-decoration: none;
        color: black;
    }
    .industryLinks {
        margin-bottom: 2rem;
    }
    .industryLinks h4 {
        margin: 1rem 0;
        color: var(--tummanvihrea);
        font-size: 1.1rem;
    }
    .industryLinksGrid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0.5rem;
        justify-items: center;
        max-width: 800px;
        margin: 0 auto;
        padding-bottom: 1.5rem;
    }
    .industryLinksGrid a {
        cursor: pointer;
        text-decoration: none;
        color: black;
        font-size: 0.9rem;
    }
    .industryLinksGrid a:hover {
        color: var(--tummanvihrea);
    }
    @media (max-width: 768px) {
        h3 {
            font-size: 1rem;
            padding: 1rem;
        }
        .footerLinks {
            flex-direction: column;
            gap: 0.5rem;
            padding: 0 1rem;
        }
        .footerLinks p {
            margin: 0.5rem 0;
        }
        .industryLinksGrid {
            grid-template-columns: 1fr;
            gap: 0.5rem;
        }
        .industryLinks h4 {
            font-size: 1rem;
        }
    }
</style>
