---
import Button from '../common/Button.astro'
import RegisterButton from '../common/RegisterButton.astro'
---

<nav class="nav">
    <div>
        <a href="/" class="logo">
            <h1>Tyovuorolista.fi</h1>
            <h4>Ravintolan ty√∂vuorolista nopeasti ja helposti</h4>
        </a>
    </div>
    <div class="navRight">
        <div class="buttonContainer">
            <RegisterButton />
            <Button href="https://app.tyovuorolista.fi/login" text="Kirjaudu" />
        </div>
        <a href="/hinnoittelu" class="navLink">Hinnoittelu</a>
        <a href="/yhteystiedot" class="navLink">Yhteystiedot</a>
    </div>
</nav>

<style>
    a {
        margin-left: 1rem;
    }
    .navRight {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-right: 2rem;
    }
    .navLink {
        color: black;
        text-decoration: none;
    }
    .navLink:hover {
        border-bottom: 1px solid var(--harmaa);
    }
    .navLink:active {
        color: rgb(72, 71, 71);
    }
    .nav {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 0;
        margin: 0;
        background-color: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 100%;
    }
    .buttonContainer {
        display: flex;
        gap: 1rem;
        margin: 1rem;
    }
    img {
        width: 150px;
        height: 150px;
    }
    .logo {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        text-decoration: none;
        color: var(--hiekka);
        margin: 1rem;
    }
    .logo h1 {
        font-size: 2rem;
        margin: 0;
        text-transform: uppercase;
    }
    @media (max-width: 640px) {
        .nav {
            display: flex;
            flex-direction: column;
            margin: 0;
            padding: 0;
            width: 100%;
            align-items: flex-start;
        }
        .logo h1 {
            font-size: 1rem;
            margin: 0;
        }
        .logo h4 {
            display: none;
        }
        .navRight {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 0.4rem;
            margin: 1rem;
            width: 90%;
        }
        .buttonContainer {
            display: flex;
            justify-content: flex-end;
            gap: 0.5rem;
            margin: 0 auto;
        }
        a {
            margin: 1rem;
        }
        img {
            width: 100px;
            height: 100px;
        }
    }
</style>
