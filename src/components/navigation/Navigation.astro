---
import Button from '../common/Button.astro'
---

<nav class="nav">
    <div>
        <a href="./" class="navLink">Työvuorolista {/*TODO: Tähän logo*/}</a>
    </div>
    <div class="navRight">
        <div class="buttonContainer">
            <Button href="" text="Rekisteröidy" backgroundColor="var(--hiekka)" />
            <Button href="" text="Kirjaudu" />
        </div>
        <a href="" class="navLink">Hinnoittelu</a>
    </div>
</nav>

<style>
    a {
        margin-left: 1rem;
    }
    .navRight {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-right: 2rem;
    }
    .navLink {
        color: black;
        text-decoration: none;
    }
    .navLink:hover {
        border-bottom: 1px solid var(--harmaa);
    }
    .navLink:active {
        color: rgb(72, 71, 71);
    }
    .nav {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 0;
        margin: 0;
        background-color: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 100%;
    }
    .buttonContainer {
        display: flex;
        gap: 1rem;
        margin: 1rem;
    }
    @media (max-width: 640px) {
        .nav {
            margin: 0;
            padding: 0;
        }
        .navRight {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 0.4rem;
            margin: 1rem;
        }
        .buttonContainer {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
        }
        a {
            margin: 1rem;
        }
    }
</style>
