---
import register from '../../assets/register.png'
import suunnittele from '../../assets/suunnittele.png'
import hyvaksyta from '../../assets/hyvaksyta.png'
import julkaise from '../../assets/julkaise.png'
import vaihda_keittioon from '../../assets/vaihda_keittioon.png'
import Step from './Step.astro'
import { getTranslationObject } from '../../utils/translations'

const { locale = 'fi' } = Astro.props
const registerData = getTranslationObject('register', locale as 'fi' | 'en' | 'sv')
---

<Step src={register} step="1" locale={locale} title={registerData?.step1?.title} description={registerData?.step1?.description} steps={registerData?.step1?.steps} />
  
  <Step src={suunnittele} step="2" locale={locale} title={registerData?.step2?.title} description={registerData?.step2?.description} steps={registerData?.step2?.steps} />
  
  <Step src={hyvaksyta} step="3" locale={locale} title={registerData?.step3?.title} description={registerData?.step3?.description} steps={registerData?.step3?.steps} />
  
  <Step src={julkaise} step="4" locale={locale} title={registerData?.step4?.title} description={registerData?.step4?.description} steps={registerData?.step4?.steps} />

<Step src={vaihda_keittioon} step="5" locale={locale} title={registerData?.step5?.title} description={registerData?.step5?.description} steps={registerData?.step5?.steps} />

