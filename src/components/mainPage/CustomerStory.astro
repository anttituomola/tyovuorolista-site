---
import { Image } from 'astro:assets'
import laura_dahlman from '../../assets/laura_dahlman.jpg'
---

<div class="wrapper">
    <div class="customerStory">
        <Image src={laura_dahlman} quality="max" alt="Placeholder image" />
        <div>
            <h2>"Työvuorolistan teko on ollut kyllä helppoa. Työntekijätkin kiittelevät listojen ulkoasua!</h2>
            <p>Laura Dahlman, Ravintola Apaja, Tampere</p>
        </div>
    </div>
</div>

<style>
    img {
        max-width: 350px;
        max-height: 300px;
        object-fit: cover;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .customerStory {
        display: flex;
        gap: 2rem;
    }
    h2 {
        font-style: italic;
        font-weight: 400;
        font-size: 2rem;
        margin-top: 0;
    }
    @media (max-width: 640px) {
        .customerStory {
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        img {
            width: 100%;
            height: auto;
        }
        h2,p {
            text-align: center;
        }
    }
</style>
