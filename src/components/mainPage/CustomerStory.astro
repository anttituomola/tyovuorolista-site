---
import { Image } from 'astro:assets'
import laura_dahlman from '../../assets/laura_dahlman.jpg'
import anita_lindov_kitola_oy from '../../assets/anita_lindov_kitola_oy.jpg'
import { t, getTranslationObject } from '../../utils/translations'

const { locale = 'fi' } = Astro.props
const customerStory = getTranslationObject('customerStory', locale as 'fi' | 'en' | 'sv')
const testimonials = customerStory?.testimonials || []
---

<div class="wrapper">
    <h2>{t('customerStory.title', locale as 'fi' | 'en' | 'sv')}</h2>
    <div class="testimonials-container">
        <button class="scroll-button scroll-left" aria-label="Scroll left">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
        <button class="scroll-button scroll-right" aria-label="Scroll right">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
        <div class="scroll-indicator">
            <div class="scroll-dots">
                <span class="dot active"></span>
                <span class="dot"></span>
                <span class="dot"></span>
            </div>
        </div>
        <div class="testimonials-scroll" id="testimonials-scroll">
            {testimonials.map((testimonial: any, index: number) => {
                const images = [laura_dahlman, null, anita_lindov_kitola_oy]
                const image = images[index]
                const isSecondTestimonial = index === 1
                
                return (
                    <div class="testimonial-card">
                        <div class={`testimonial-image ${!image ? 'placeholder' : ''}`}>
                            {image ? (
                                <Image src={image} quality="max" alt={testimonial.author} />
                            ) : (
                                <div class="placeholder-avatar">
                                    <span>RK</span>
                                </div>
                            )}
                        </div>
                        <div class="testimonial-content">
                            <blockquote>
                                "{testimonial.quote}"
                            </blockquote>
                            {testimonial.quote2 && (
                                <blockquote class="secondary-quote">
                                    "{testimonial.quote2}"
                                </blockquote>
                            )}
                            <cite>
                                <strong>{testimonial.author}</strong><br>
                                {testimonial.company}
                            </cite>
                        </div>
                    </div>
                )
            })}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const scrollContainer = document.getElementById('testimonials-scroll');
    const leftButton = document.querySelector('.scroll-left');
    const rightButton = document.querySelector('.scroll-right');
    const dots = document.querySelectorAll('.dot');
    
    if (scrollContainer) {
        const cardWidth = 370; // Card width + gap
        
        // Button functionality (desktop/tablet)
        if (leftButton && rightButton) {
            leftButton.addEventListener('click', () => {
                scrollContainer.scrollBy({
                    left: -cardWidth,
                    behavior: 'smooth'
                });
            });
            
            rightButton.addEventListener('click', () => {
                scrollContainer.scrollBy({
                    left: cardWidth,
                    behavior: 'smooth'
                });
            });
        }
        
        // Dot functionality (mobile)
        dots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
                scrollContainer.scrollTo({
                    left: index * cardWidth,
                    behavior: 'smooth'
                });
            });
        });
        
        // Update button state and dots based on scroll position
        const updateUI = () => {
            const { scrollLeft, scrollWidth, clientWidth } = scrollContainer;
            
            // Update button states (if buttons exist)
            if (leftButton && rightButton) {
                (leftButton as HTMLButtonElement).disabled = scrollLeft <= 0;
                (rightButton as HTMLButtonElement).disabled = scrollLeft >= scrollWidth - clientWidth - 10;
            }
            
            // Update dots
            if (dots.length > 0) {
                const cardIndex = Math.round(scrollLeft / cardWidth);
                dots.forEach((dot, index) => {
                    dot.classList.toggle('active', index === cardIndex);
                });
            }
        };
        
        scrollContainer.addEventListener('scroll', updateUI);
        updateUI(); // Initial state
    }
});
</script>

<style>
    h2 {
        font-size: var(--text-3xl);
        text-align: center;
        margin-bottom: var(--space-2xl);
        font-weight: 500;
        color: var(--tummanvihrea);
    }
    
    .testimonials-container {
        position: relative;
        width: 100%;
        margin: 0 auto;
        max-width: 1200px;
    }
    
    .scroll-button {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 10;
        background: white;
        border: 1px solid var(--vaaleanharmaa);
        border-radius: 50%;
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        transition: all 0.2s ease;
        color: var(--tummanvihrea);
    }
    
    .scroll-button:hover {
        background: var(--vaaleanharmaa);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
        transform: translateY(-50%) scale(1.05);
    }
    
    .scroll-button:active {
        transform: translateY(-50%) scale(0.95);
    }
    
    .scroll-button:disabled {
        opacity: 0.3;
        cursor: not-allowed;
    }
    
    .scroll-left {
        left: -60px;
    }
    
    .scroll-right {
        right: -60px;
    }
    
    .testimonials-scroll {
        display: flex;
        gap: var(--space-xl);
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        padding: var(--space-base) 0 var(--space-2xl) 0;
        scrollbar-width: thin;
        scrollbar-color: var(--hiekka) transparent;
        margin: 0 var(--space-base);
    }
    
    .testimonials-scroll::-webkit-scrollbar {
        height: 6px;
    }
    
    .testimonials-scroll::-webkit-scrollbar-track {
        background: var(--vaaleanharmaa);
        border-radius: 3px;
    }
    
    .testimonials-scroll::-webkit-scrollbar-thumb {
        background: var(--hiekka);
        border-radius: 3px;
    }
    
    .testimonial-card {
        display: flex;
        flex-direction: column;
        background: white;
        border-radius: 12px;
        padding: var(--space-xl);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--vaaleanharmaa);
        min-width: 350px;
        max-width: 400px;
        flex-shrink: 0;
        scroll-snap-align: start;
        gap: var(--space-lg);
    }
    
    .testimonial-image {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .testimonial-image img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 50%;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    .placeholder-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: var(--hiekka);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: var(--text-lg);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    .testimonial-content {
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: var(--space-base);
        flex-grow: 1;
    }
    
    blockquote {
        font-size: var(--text-lg);
        line-height: 1.5;
        color: var(--tummanvihrea);
        font-weight: 500;
        margin: 0;
        font-style: italic;
    }
    
    .secondary-quote {
        font-size: var(--text-base);
        color: var(--harmaa);
        font-weight: 400;
        margin-top: var(--space-sm);
    }
    
    cite {
        font-style: normal;
        margin-top: auto;
        padding-top: var(--space-base);
        border-top: 1px solid var(--vaaleanharmaa);
    }
    
    cite strong {
        font-size: var(--text-base);
        font-weight: 600;
        color: var(--tummanvihrea);
        display: block;
        margin-bottom: var(--space-xs);
    }
    
    cite br + text,
    cite:not(strong) {
        font-size: var(--text-sm);
        color: var(--harmaa);
        font-weight: 400;
    }
    
    .scroll-indicator {
        display: none;
        justify-content: center;
        margin-bottom: var(--space-lg);
    }
    
    .scroll-dots {
        display: flex;
        gap: var(--space-sm);
    }
    
    .dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: var(--vaaleanharmaa);
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .dot.active {
        background: var(--hiekka);
        transform: scale(1.3);
    }
    
    .dot:hover {
        background: var(--ruskeaharmaa);
    }
    
    @media (max-width: 768px) {
        h2 {
            font-size: var(--text-2xl);
        }
        
        .scroll-button {
            width: 40px;
            height: 40px;
        }
        
        .scroll-left {
            left: -50px;
        }
        
        .scroll-right {
            right: -50px;
        }
        
        .testimonials-scroll {
            gap: var(--space-base);
            margin: 0 var(--space-sm);
        }
        
        .testimonial-card {
            min-width: 280px;
            max-width: 320px;
            padding: var(--space-lg);
        }
        
        blockquote {
            font-size: var(--text-base);
        }
        
        .secondary-quote {
            font-size: var(--text-sm);
        }
        
        cite strong {
            font-size: var(--text-sm);
        }
    }
    
    @media (max-width: 480px) {
        .scroll-button {
            display: none;
        }
        
        .testimonials-scroll {
            margin: 0;
            padding: var(--space-base) var(--space-sm) var(--space-2xl) var(--space-sm);
        }
        
        .testimonial-card {
            min-width: 260px;
            max-width: 280px;
        }
        
        .scroll-indicator {
            display: flex;
        }
    }
</style>
