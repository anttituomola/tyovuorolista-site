---
import { t, getTranslationObject } from '../../utils/translations'

const { locale = 'fi' } = Astro.props
const faq = getTranslationObject('faq', locale as 'fi' | 'en' | 'sv')
const questions = faq?.questions || {}
---

<div class="wrapper">
    <h2>{t('faq.title', locale as 'fi' | 'en' | 'sv')}</h2>
    <div class="faq">
        <div class="subFaq">
            <h3>{t('faq.questions.cost.question', locale as 'fi' | 'en' | 'sv')}</h3>
            <p>{t('faq.questions.cost.answer', locale as 'fi' | 'en' | 'sv')}</p>
            <ul>
                {questions.cost?.tiers?.map((tier: string) => (
                    <li>{tier}</li>
                ))}
            </ul>
            <p>{t('faq.questions.cost.vat', locale as 'fi' | 'en' | 'sv')}</p>

            <h3>{t('faq.questions.trial.question', locale as 'fi' | 'en' | 'sv')}</h3>
            <p>{t('faq.questions.trial.answer', locale as 'fi' | 'en' | 'sv')}</p>
            
            <h3>{t('faq.questions.commitment.question', locale as 'fi' | 'en' | 'sv')}</h3>
            <p>{t('faq.questions.commitment.answer', locale as 'fi' | 'en' | 'sv')}</p>
            
            <h3>{t('faq.questions.start.question', locale as 'fi' | 'en' | 'sv')}</h3>
            <p>{t('faq.questions.start.answer', locale as 'fi' | 'en' | 'sv')}</p>
            
            <h3>{t('faq.questions.creator.question', locale as 'fi' | 'en' | 'sv')}</h3>
            <p>{t('faq.questions.creator.answer', locale as 'fi' | 'en' | 'sv')}</p>

        </div>
        <div class="subFaq">
            <h3>{t('faq.questions.difficulty.question', locale as 'fi' | 'en' | 'sv')}</h3>
            <p>{t('faq.questions.difficulty.answer', locale as 'fi' | 'en' | 'sv')}</p>
            
            <h3>{t('faq.questions.publish.question', locale as 'fi' | 'en' | 'sv')}</h3>
            <p>{t('faq.questions.publish.answer', locale as 'fi' | 'en' | 'sv')}</p>
            
            <h3>{t('faq.questions.difference.question', locale as 'fi' | 'en' | 'sv')}</h3>
            <p>{t('faq.questions.difference.answer', locale as 'fi' | 'en' | 'sv')}</p>
            <ul>
                {questions.difference?.points?.map((point: string) => {
                    // Check if point contains bold markers (format: "Bold text: regular text")
                    const parts = point.split(':')
                    if (parts.length > 1) {
                        return <li><strong>{parts[0]}:</strong> {parts.slice(1).join(':')}</li>
                    }
                    return <li>{point}</li>
                })}
            </ul>
        </div>
    </div>
</div>
    
<style>
    h2 {
        font-size: var(--text-3xl);
        text-align: center;
        margin-bottom: var(--space-2xl);
        font-weight: 500;
    }
    .faq {
        display: flex;
        gap: var(--space-2xl);
        max-width: 1000px;
        margin: 0 auto;
    }
    .subFaq {
        flex: 1;
    }
    .subFaq h3 {
        font-size: var(--text-lg);
        margin-bottom: var(--space-base);
        margin-top: var(--space-xl);
        font-weight: 600;
        color: var(--tummanvihrea);
    }
    .subFaq h3:first-child {
        margin-top: 0;
    }
    .subFaq p {
        font-size: var(--text-base);
        line-height: 1.6;
        margin-bottom: var(--space-lg);
    }
    .subFaq ul {
        margin: var(--space-base) 0;
        padding-left: var(--space-xl);
    }
    .subFaq li {
        font-size: var(--text-base);
        line-height: 1.6;
        margin: var(--space-xs) 0;
        color: var(--harmaa);
        list-style-type: disc;
    }
    .subFaq strong {
        font-weight: 600;
        color: var(--tummanvihrea);
    }
    @media (max-width: 768px) {
        h2 {
            font-size: var(--text-2xl);
        }
        .faq {
            flex-direction: column;
            gap: var(--space-xl);
        }
        .subFaq h3 {
            font-size: var(--text-base);
            font-weight: 600;
        }
        .subFaq ul {
            padding-left: var(--space-lg);
        }
        .subFaq p, .subFaq li {
            font-size: var(--text-sm);
        }
    }
</style>
