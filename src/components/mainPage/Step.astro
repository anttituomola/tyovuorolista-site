---
import { Icon } from 'astro-icon'
import { Image } from 'astro:assets'
const { steps, step, src, title, description } = Astro.props
---

<div class="wrapper">
    <div class="textAndImage">
        <div class="image">
            <Image src={src} alt={title} height={250} />
        </div>
        <div class="text">
            <div class="title">
                <span class="numberedBox">{step}</span>
                <h2>{title}</h2>
            </div>
            <p>
                {description}
            </p>
            {
                steps.map((mapStep: any) => (
                    <div class="step">
                        <Icon name="ic:baseline-check" class="icon" />
                        <p>
                            <strong>{mapStep.title}:</strong> {mapStep.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</div>

<style>
    .numberedBox {
        border: 2px solid var(--ruskeaharmaa);
        border-radius: 5px;
        width: 2rem;
        height: 2rem;
        margin-top: 2rem;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bold;
    }
    .title {
        display: flex;
        align-items: baseline;
        gap: 1rem;
    }
    .textAndImage {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 2rem 0;
        gap: 1rem;
    }
    .text {
        flex-basis: 45%;
    }
    .image img {
        flex-basis: 45%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        object-fit: contain;
        width: 100%;
    }
    .icon {
        width: 3rem;
        height: 3rem;
    }
    .step {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
        align-items: center;
    }
    p {
        margin: 0;
    }
    @media (max-width: 640px) {
        .textAndImage {
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .image {
            max-width: 100%;
            height: auto;
        }
        .text {
            width: 80%;
        }
    }
</style>
