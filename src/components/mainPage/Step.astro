---
import { Icon } from 'astro-icon'
import { Image } from 'astro:assets'
const { steps, step, src, title, description } = Astro.props
---

<div class="wrapper">
    <div class="textAndImage">
        {
            step % 2 === 0
            ? <>
                <div class="text">
                    <div class="title">
                        <span class="numberedBox">{step}</span>
                        <h2>{title}</h2>
                    </div>
                    <p>
                        {description}
                    </p>
                    {
                        steps.map((mapStep: any) => (
                            <div class="step">
                                <Icon name="ic:baseline-check" class="icon" />
                                <p>
                                    <strong>{mapStep.title}:</strong> {mapStep.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
                <div class="image">
                    <Image src={src} alt={title} height={250} />
                </div>
            </>
            : <>
                <div class="image">
                    <Image src={src} alt={title} height={250} />
                </div>
                <div class="text">
                    <div class="title">
                        <span class="numberedBox">{step}</span>
                        <h2>{title}</h2>
                    </div>
                    <p>
                        {description}
                    </p>
                    {
                        steps.map((mapStep: any) => (
                            <div class="step">
                                <Icon name="ic:baseline-check" class="icon" />
                                <p>
                                    <strong>{mapStep.title}:</strong> {mapStep.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </>
        }
    </div>
</div>


<style>
    .wrapper {
        margin: var(--space-3xl) 0;
    }
    .numberedBox {
        border: 1px solid var(--hiekka);
        border-radius: 50%;
        width: 1.5rem;
        height: 1.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: 600;
        font-size: var(--text-xs);
        background: var(--hiekka);
        color: white;
        flex-shrink: 0;
    }
    .title {
        display: flex;
        align-items: center;
        gap: var(--space-base);
        margin-bottom: var(--space-lg);
    }
    .title h2 {
        font-size: var(--text-2xl);
        font-weight: 500;
        margin: 0;
    }
    .textAndImage {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: var(--space-2xl);
        max-width: 1000px;
        margin: 0 auto;
    }
    .text {
        flex: 1;
        max-width: 500px;
    }
    .text > p {
        font-size: var(--text-lg);
        margin-bottom: var(--space-xl);
        line-height: 1.6;
    }
    .image {
        flex: 1;
        max-width: 400px;
    }
    .image img {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border-radius: 8px;
        object-fit: contain;
        width: 100%;
    }
    .icon {
        width: 1.25rem;
        height: 1.25rem;
        color: var(--hiekka);
        flex-shrink: 0;
    }
    .step {
        display: flex;
        gap: var(--space-base);
        margin-bottom: var(--space-lg);
        align-items: flex-start;
    }
    .step:last-child {
        margin-bottom: 0;
    }
    .step p {
        margin: 0;
        font-size: var(--text-base);
        line-height: 1.5;
    }
    .step strong {
        font-weight: 600;
        color: var(--tummanvihrea);
    }
    @media (max-width: 768px) {
        .wrapper {
            margin: var(--space-2xl) 0;
            padding: 0 var(--space-base);
        }
        .textAndImage {
            flex-direction: column;
            gap: var(--space-xl);
            align-items: center;
        }
        .text {
            max-width: 100%;
            order: 2;
        }
        .image {
            max-width: 100%;
            order: 1;
        }
        .title h2 {
            font-size: var(--text-xl);
        }
        .text > p {
            font-size: var(--text-base);
        }
        .step {
            gap: var(--space-sm);
            margin-bottom: var(--space-base);
        }
    }
</style>
