---
// GoogleAnalytics.astro - Google Analytics 4 component
const ga4Id = import.meta.env.PUBLIC_GA4_MEASUREMENT_ID || 'G-JM7RE74XRZ';
---

{ga4Id && (
  <>
    <!-- Google tag (gtag.js) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${ga4Id}`}></script>
    <script is:inline define:vars={{ ga4Id }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', ga4Id);
    </script>
  </>
)}

