---
const { text, backgroundColor, href } = Astro.props
---

<a href={href}>
    <div class="button">
        <span>{text || 'Paina tästä!'}</span>
    </div>
</a>

<style define:vars={{ backgroundColor }}>
    .button {
        display: inline-block;
        border: 1px solid var(--ruskeaharmaa);
        background-color: var(--backgroundColor);
        border-radius: 4px;
        padding: 1rem;
        margin: 1rem;
        transition: background-color 0.3s ease;
    }
    .button:hover {
        border-color: var(--harmaa);
        cursor: pointer;
    }
    .button:active {
        transform: scale(0.98);
    }
    span {
        color: #333;
        font-size: 1.2em;
    }
    @media (max-width: 620px) {
        .button {
            padding: 0.5rem;
            margin: 0.5rem;
        }
    }
</style>

