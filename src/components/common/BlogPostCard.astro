---
const { title, pubDate, image, description, tags } = Astro.props.post.frontmatter
const { url } = Astro.props.post
const { url: imageUrl, alt } = image || { url: '', alt: '' }; 

import dayjs from 'dayjs'
---

<div class="blogPostCard" >
    <a href={url}>
        <div>
            {imageUrl && <img src={imageUrl} alt={alt} />}
            <h1>{title}</h1>
            <p>{description}</p>
            <p class="metadata">
                Julkaistu {dayjs(pubDate).format('DD.MM.YYYY')}
            </p>
            <p class="tags">
                Avainsanat: {tags.map((tag: string, index: number) => {
                    if (index === tags.length - 1) {
                        return tag
                    } else {
                        return tag + ', '
                    }
                })}
            </p>
        </div>
    </a>
</div>

<style define:vars={{ imageUrl}}>
img {
    width: 100%;
    height: 120px;
    margin-bottom: var(--space-base);
    object-fit: cover;
    border-radius: 8px;
}
    .blogPostCard {
        display: flex;
        flex-direction: column;
        border: 1px solid var(--vaaleanharmaa);
        padding: var(--space-xl);
        border-radius: 12px;
        background-color: white;
        color: var(--tummanvihrea);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.2s ease;
        height: 100%;
        width: 100%;
        box-sizing: border-box;
    }
    .blogPostCard > a {
        display: flex;
        flex-direction: column;
        height: 100%;
        width: 100%;
    }
    .blogPostCard > a > div {
        display: flex;
        flex-direction: column;
        height: 100%;
    }
    .blogPostCard:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
    }
    .blogPostCard a {
        text-decoration: none;
        color: inherit;
    }
    h1 {
        font-size: var(--text-xl);
        margin: 0 0 var(--space-base) 0;
        font-weight: 600;
        color: var(--tummanvihrea);
        text-align: center;
        line-height: 1.3;
    }
    p {
        font-size: var(--text-sm);
        line-height: 1.5;
        margin: var(--space-xs) 0;
        color: var(--harmaa);
        text-align: center;
    }
    p strong {
        color: var(--tummanvihrea);
        font-weight: 600;
    }
    .metadata {
        font-size: 0.8rem;
        color: #999;
        margin-top: 0.5rem;
        text-align: center;
        line-height: 1.4;
    }
    .tags {
        font-size: 0.8rem;
        color: #999;
        margin-top: auto;
        padding-top: var(--space-base);
        text-align: center;
        line-height: 1.4;
    }
    @media (max-width: 640px) {
        .blogPostCard {
            width: 100%;
        }
        img {
            width: 100%;
            height: auto;
        }
        h1 {
            font-size: var(--text-lg);
        }
        p {
            font-size: var(--text-xs);
        }
        .metadata {
            font-size: 0.8rem;
        }
    }
</style>
