---
import Layout from '../layouts/Layout.astro'
import Button from '../components/common/Button.astro'
import { t, getLocaleFromAstro } from '../utils/translations'

const locale = getLocaleFromAstro(Astro)

// Set HTTP 404 status code
Astro.response.status = 404

const homePath = locale === 'fi' ? '/' : `/${locale}/`
---

<Layout 
    title={t('notFound.title', locale)}
    description={t('notFound.description', locale)}
>
    <div class="not-found-wrapper">
        <div class="content">
            <div class="icon">üîç</div>
            <h1>{t('notFound.heading', locale)}</h1>
            <p>{t('notFound.description', locale)}</p>
            <div class="actions">
                <Button 
                    href={homePath}
                    text={t('notFound.backToHome', locale)}
                    backgroundColor="var(--tummanvihrea)"
                    textColor="var(--vaaleanharmaa)"
                />
            </div>
        </div>
    </div>
</Layout>

<style>
    .not-found-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
        padding: var(--space-xl);
    }

    .content {
        text-align: center;
        max-width: 500px;
    }

    .icon {
        font-size: 4rem;
        margin-bottom: var(--space-lg);
    }

    h1 {
        margin-bottom: var(--space-base);
        color: var(--tummanvihrea);
    }

    p {
        margin-bottom: var(--space-xl);
        color: var(--harmaa);
        line-height: 1.6;
    }

    .actions {
        display: flex;
        justify-content: center;
        gap: var(--space-base);
    }
</style>

